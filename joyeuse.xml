<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="neko-github"
           fetch="https://github.com/nekoshirro"/>

    <!-- Device Repository -->
    <project path="device/xiaomi/joyeuse" name="EvolutionX-tiramisu" remote="neko-github" revision="device"/>

    <!-- Vendor Repository -->
    <project path="vendor/xiaomi/joyeuse" name="vendor_xiaomi_joyeuse" remote="neko-github" revision="13"/>

    <!-- Kernel and Toolchain Repository -->
    <project path="kernel/xiaomi/sm6250" name="nekoshirro/android_kernel_xiaomi_sm6250" remote="github" revision="Krypton-HCK"/>
    <project path="prebuilts/clang/host/linux-x86/clang-proton" name="kdrag0n/proton-clang" remote="github" revision="master" clone-depth="1"/> 

    <!-- Custom Repositories -->
    <remove-project name="vendor_evolution" />
    <project path="vendor/evolution" name="vendor_evolution-x" remote="neko-github" revision="tiramisu" />
    <project path="external/jemalloc_new" name="BootleggersROM/external_jemalloc_new" revision="tirimbino" remote="github" />
    <remove-project name="frameworks_av" revision="tiramisu" />
    <remove-project name="frameworks_base" revision="tiramisu" />
    <project path="frameworks/av" name="frameworks_av" revision="tiramisu-jem" remote="evo" />
    <project path="frameworks/base" name="frameworks_base" revision="tiramisu-jem" remote="evo" />
    <remove-project name="bionic" revision="tiramisu" />
    <project path="bionic" name="bionic" revision="tiramisu-jem" remote="evo" />
    <remove-project name="build" revision="tiramisu" />
    <project path="build/make" name="build" revision="tiramisu-jem" remote="evo" groups="pdk" >
      <copyfile src="core/root.mk" dest="Makefile" />
      <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
      <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
      <linkfile src="core" dest="build/core" />
      <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
      <linkfile src="target" dest="build/target" />
      <linkfile src="tools" dest="build/tools" />
    </project>
    <remove-project name="build_soong" revision="tiramisu" />
    <project path="build/soong" name="build_soong" revision="tiramisu-jem" remote="evo" groups="pdk,tradefed" >
      <linkfile src="root.bp" dest="Android.bp" />
      <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
    </project>
    <remove-project name="manifest" revision="tiramisu" />
    <project path="manifest" name="manifest" revision="tiramisu-jem" remote="evo" />
    <remove-project name="system_core" revision="tiramisu" />
    <project path="system/core" name="system_core" revision="tiramisu-jem" remote="evo" />
    <remove-project name="platform/external/jemalloc_new" />
</manifest>
